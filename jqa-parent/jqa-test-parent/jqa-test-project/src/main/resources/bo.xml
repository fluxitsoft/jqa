<?xml version="1.0" encoding="UTF-8"?>
<jqa_ctx:RulesContext xmlns:jqa="http://www.fluxit.com.ar/jqa/schema/ruleset"
	xmlns:jqa_ctx="http://www.fluxit.com.ar/jqa/schema/rulescontext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.fluxit.com.ar/jqa/schema/rulescontext http://jqa-project.googlecode.com/svn/trunk/jqa-parent/jqa-ctx-factory/src/main/resources/schema/rulescontext.xsd ">

	<ruleSet name="BO rule set">
		<rule name="BO contract rule" priority="4"
			message="This BO contract is not valid. Perhaps its name, package or type are wrong.">
			<filterPredicate xsi:type="jqa:AndPredicate">
				<predicate xsi:type="jqa:NamingPredicate"
					classNamePattern="**BO*" />
				<predicate xsi:type="jqa:AbstractionPredicate"
					abstractionType="INTERFACE" />
			</filterPredicate>
			<checkPredicate xsi:type="jqa:ContextProvidedPredicate"
				providedPredicateName="Valid BO contract" />
		</rule>
		<rule name="BO implementation rule" priority="4"
			message="This BO implementation is not valid. Perhaps its name, package or type are wrong.">
			<filterPredicate xsi:type="jqa:AndPredicate">
				<predicate xsi:type="jqa:NamingPredicate"
					classNamePattern="**BO*" />
				<predicate xsi:type="jqa:AbstractionPredicate"
					abstractionType="CONCRETE" />
			</filterPredicate>
			<checkPredicate xsi:type="jqa:ContextProvidedPredicate"
				providedPredicateName="Valid BO implementation" />
		</rule>
	</ruleSet>

	<globalPredicate name="Valid BO contract" xsi:type="jqa:AndPredicate">
		<predicate xsi:type="jqa:AbstractionPredicate"
			abstractionType="INTERFACE" />
		<predicate xsi:type="jqa:ContextProvidedPredicate"
			providedPredicateName="Valid BO contract name" />
		<predicate xsi:type="jqa:ContextProvidedPredicate"
			providedPredicateName="Valid BO type" />
	</globalPredicate>

	<globalPredicate name="Valid BO implementation"
		xsi:type="jqa:AndPredicate">
		<predicate xsi:type="jqa:AbstractionPredicate"
			abstractionType="CONCRETE" />
		<predicate xsi:type="jqa:ContextProvidedPredicate"
			providedPredicateName="Valid BO implementation name" />
		<predicate xsi:type="jqa:TypingPredicate">
			<filterPredicate xsi:type="jqa:ContextProvidedPredicate"
				providedPredicateName="Valid BO contract" />
		</predicate>
	</globalPredicate>

</jqa_ctx:RulesContext>