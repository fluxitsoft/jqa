<?xml version="1.0" encoding="UTF-8"?>
<jqa:Ruleset name="Sample ruleset"
	xmlns:jqa="http://www.fluxit.com.ar/jqa/schema/ruleset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.fluxit.com.ar/jqa/schema/ruleset http://jqa-project.googlecode.com/svn/trunk/jqa-parent/jqa-ctx-factory/src/main/resources/schema/ruleset.xsd ">

	<!-- DAO rules	-->
	<rule name="DAO contract rule"
		message="This DAO contract is not valid. Perhaps its name, package or type are wrong.">
		<filterPredicate xsi:type="jqa:AndPredicate">
			<predicate xsi:type="jqa:NamingPredicate" classNamePattern="**DAO*" />
			<predicate xsi:type="jqa:AbstractionPredicate"
				abstractionType="INTERFACE" />
		</filterPredicate>
		<checkPredicate xsi:type="jqa:ContextProvidedPredicate"
			providedPredicateName="Valid DAO contract" />
	</rule>
	<rule name="DAO implementation rule"
		message="This DAO implementation is not valid. Perhaps its name, package or type are wrong.">
		<filterPredicate xsi:type="jqa:AndPredicate">
			<predicate xsi:type="jqa:NamingPredicate" classNamePattern="**DAO*" />
			<predicate xsi:type="jqa:AbstractionPredicate"
				abstractionType="CONCRETE" />
		</filterPredicate>
		<checkPredicate xsi:type="jqa:ContextProvidedPredicate"
			providedPredicateName="Valid DAO implementation" />
	</rule>

